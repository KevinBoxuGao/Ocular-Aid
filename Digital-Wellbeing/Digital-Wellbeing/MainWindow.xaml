<Window x:Class="Digital_Wellbeing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Wellbeing"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <tb:TaskbarIcon x:Name="notifyIcon" Visibility="visible"/>
        <StackPanel Margin="350,0,350,0" Orientation="Horizontal">
            <Button Content="Page 1" Click="Page1"/>
            <Button Content="Page 2" Click="Page2"/>
        </StackPanel>
      <TextBlock Text="Screen Time"></TextBlock>
      <TextBlock Text="2h 0m today"></TextBlock>
      <TextBlock Text="Fatigue"></TextBlock>
      <TextBlock Text="You're starting to show signs of fatigue"></TextBlock>
      <Button Text="Refresh"></Button>
      <TextBlock Text="14"></TextBlock>
      <TextBlock Text="more minutes until your next break"></TextBlock>
        <Frame x:Name="Main" Margin="0.3" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
